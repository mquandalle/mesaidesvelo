		"jsdom": "^23.0.1",
		"playwright-aws-lambda": "^0.10.0",
		"playwright-core": "^1.40.1",
		"publicodes": "^1.8.0",
		"svelte-markdown": "^0.4.1"
	},
	"overrides": {
		"vite": {
			"rollup": "npm:@rollup/wasm-node"
		}
